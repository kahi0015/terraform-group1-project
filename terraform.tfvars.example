# Copy this file to secrets.tfvars and fill in your actual values
# DO NOT commit secrets.tfvars to version control

# Azure Service Principal credentials
subscription_id = "your-subscription-id-here"
client_id       = "your-client-id-here"
client_secret   = "your-client-secret-here"
tenant_id       = "your-tenant-id-here"

# Database credentials
db_admin_username = "mysqladmin"
db_admin_password = "your-secure-password-here"

# VM credentials
vm_admin_password = "your-vm-password-here"

# Network security (replace with your IP for better security)
allowed_ssh_source_ip = "0.0.0.0/0"  # Change to your IP: "1.2.3.4/32"